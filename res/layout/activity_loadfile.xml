<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/main_menu" >

        <ImageView
            android:id="@+id/fragment04_arrowforward"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="导入频谱文件"
            android:textColor="#FFFF00"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/activity_loadfile_record"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="#3fffffff"
            android:gravity="center"
            android:padding="6dp"
            android:text="记 录"
            android:textColor="#0066CC"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:gravity="right"
                android:text="操作步骤："
                android:textColor="#0066CC"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:textSize="15sp" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_loadfile_s"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/apliedbutton"
            android:text=" 1、导入S文件"
            android:textColor="#0066CC"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S文件路径: "
                android:textColor="#0066CC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_loadfile_path_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#0066CC"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_loadfile_d"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/apliedbutton"
            android:text=" 2、导入D文件"
            android:textColor="#0066CC"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D文件路径: "
                android:textColor="#0066CC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_loadfile_path_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#0066CC"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_loadfile_r"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/apliedbutton"
            android:text=" 3、导入R文件 "
            android:textColor="#0066CC"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R文件路径: "
                android:textColor="#0066CC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/activity_loadfiel_path_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#0066CC"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_loadfile_confirm"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/apliedbutton"
            android:text=" 生成图表 "
            android:textColor="#0066CC"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>